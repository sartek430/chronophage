{
    "name": "Java 21 + Spring Boot",
    "image": "mcr.microsoft.com/devcontainers/java:21",
    "features": {},
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "redhat.java",
                "pivotal.vscode-spring-boot"
            ]
        }
    },
    "runArgs": ["--network", "host"],
    "forwardPorts": [8080],
    "postCreateCommand": "sdk install java 21.0.0-open"
}
